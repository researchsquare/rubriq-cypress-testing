{
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "cypress/globals": true
    },
    "extends": ["eslint:recommended", "plugin:cypress/recommended"],
    "rules": {
        "cypress/no-unnecessary-waiting": "off",
        "indent": [2, 4],
        "semi": ["error", "never"]
    }
}
